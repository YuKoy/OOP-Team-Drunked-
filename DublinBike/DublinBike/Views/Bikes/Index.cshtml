@model DublinBike.Models.DublinStationGenre

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<form asp-controller="DublinStations" asp-action="Index" method="get">
    <p>

        <select asp-for="StationName" asp-items="Model.Names">
            <option value="">All</option>
        </select>


        Title: <input type="text" name="searchString" />
        <input type="submit" value="Filter" />

    </p>


</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DublinStations[0].Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DublinStations[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DublinStations[0].adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DublinStations[0].latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DublinStations[0].longitude)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DublinStations)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.adress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.latitude)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.longitude)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
